<section class="loginform cf">
    <%= link_to "Sign up", new_registration_path(resource_name), style: "padding-left:80%;" %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div><%= f.label :useremail %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "yourname@email.com" %></div>

      <div><%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off",placeholder: "password" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in" %></div>
    <% end %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
</section>

