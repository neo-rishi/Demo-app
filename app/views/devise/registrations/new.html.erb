<section class="loginform cf">
  <%= link_to "Sign in", new_session_path(resource_name), style: "padding-left:80%;"  %><br />
  <% resource.build_profile %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
        <div><%= f.label :useremail %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "yourname@email.com" %></div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off",placeholder: "password" %></div>
        <div><%= f.label :Confirm_password %><br />
          <%= f.password_field :password_confirm, autocomplete: "off",placeholder: "confirm password" %></div>

        <div><%= f.submit "Sign up" %></div>
  <% end %>
</section>