<div class="wrapper">
	<%= form_tag login_users_path, class:"form-signin", method: :post do %>
		 <h2 class="form-signin-heading">Please login</h2>
		<table>
			<tr>
				<td><%=email_field_tag :email,nil, class: "form-control", placeholder: "Email Address"%></td>
			</tr>
			<tr>
				<td><%=password_field_tag :password,nil, class: "form-control", placeholder: "Password"%></td>
			</tr>
			<tr>
				<td><%=submit_tag 'login', class:"btn btn-lg btn-primary btn-block"%></td>
			</tr>
		</table>
	<% end %>
</div>

